<% @pagetitle = "Earning/Spending" %>

<table class="sparse">
<thead><tr><th>Account</th><%= (0...12).to_a.collect{|i| content_tag(:th, (@max_date << i).strftime('%B %Y'))} %></tr></thead>
<tbody>
<% @accounts.each do |account| -%>
  <tr><td><%= account[1] %></td><%= (0...12).to_a.collect{|i| content_tag(:td, account[2+i], :class=>'money')} %></tr>
<% end%>
</tbody></table>
