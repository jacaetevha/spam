<% @pagetitle = "Earning/Spending" %>

<% if !@headers.empty? %>
  <table class="sparse">
  <thead><tr><th>Account</th><% @headers.each do |k, v| %>
    <th><%= k %></th>
  <% end %></tr></thead>
  <tbody>
  <% @accounts.each do |account| -%>
    <tr><td><%= account[:name] %></td><% @headers.each.each do |k, v| %>
      <td class="money"><%= account[v].to_money unless account[v] == 0 %></td>
    <% end %></tr>
  <% end%>
  </tbody></table>
<% else %>
  <p>This report isn't ready yet, because no entries have been entered.</p>
<% end %>
