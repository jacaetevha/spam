<% @pagetitle = "Earning/Spending" %>

<% if @max_date %>
  <table class="sparse">
  <thead><tr><th>Account</th><% (0...12).each do |i| %>
    <th><%= (@max_date << i).strftime('%B %Y') %></th>
  <% end %></tr></thead>
  <tbody>
  <% @accounts.each do |account| -%>
    <tr><td><%= account[:name] %></td><% (0...12).each do |i| %>
      <td class="money"><%= account[:"month_#{i}"].to_money unless account[:"month_#{i}"] == 0 %></td>
    <% end %></tr>
  <% end%>
  </tbody></table>
<% else %>
  <p>This report isn't ready yet, because no entries have been entered.</p>
<% end %>
